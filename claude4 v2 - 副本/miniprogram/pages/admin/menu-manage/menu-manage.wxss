/* pages/admin/menu-manage/menu-manage.wxss */
.menu-manage-container {
  padding: 20rpx;
}

/* 添加按钮 */
.add-btn-wrapper {
  margin-bottom: 20rpx;
}

.add-btn {
  width: 100%;
  background: #07c160;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 28rpx;
  font-weight: bold;
}

/* 菜品列表 */
.dish-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dish-card {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.dish-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.dish-info {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-category {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.dish-status {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.dish-status.online {
  background: #f6ffed;
  color: #52c41a;
}

.dish-status.offline {
  background: #fff1f0;
  color: #f5222d;
}

/* 操作按钮 */
.dish-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.action-btn {
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.edit-btn {
  background: #1890ff;
  color: white;
}

.toggle-btn {
  background: #faad14;
  color: white;
}

.delete-btn {
  background: #f5222d;
  color: white;
}
