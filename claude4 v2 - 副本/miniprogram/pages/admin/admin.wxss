/* pages/admin/admin.wxss */
.admin-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

/* 头部 */
.admin-header {
  text-align: center;
  color: white;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 管理菜单 */
.admin-menu {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.menu-item:active {
  transform: scale(0.98);
}

.menu-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.menu-info {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 26rpx;
  color: #999;
}

.menu-arrow {
  font-size: 50rpx;
  color: #ddd;
  font-weight: 100;
}
