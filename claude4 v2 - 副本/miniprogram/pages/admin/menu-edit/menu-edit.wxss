/* pages/admin/menu-edit/menu-edit.wxss */
.menu-edit-container {
  padding: 20rpx;
}

.form-section {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.dish-image-preview {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

/* 状态切换 */
.status-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 50rpx;
}

.submit-btn {
  flex: 1;
  background: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 28rpx;
  border: none;
}

.cancel-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 28rpx;
  border: none;
}
