/* pages/admin/order-manage/order-manage.wxss */
.order-manage-container {
  padding: 20rpx;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.filter-item.active {
  background: #07c160;
  color: white;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background: #f5f5f5;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.order-status.pending {
  background: #fff7e6;
  color: #faad14;
}

.order-status.confirmed {
  background: #e6f7ff;
  color: #1890ff;
}

.order-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 菜品列表 */
.order-dishes {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
}

.dish-count {
  font-size: 26rpx;
  color: #666;
}

/* 备注 */
.order-notes {
  font-size: 26rpx;
  color: #666;
  padding: 15rpx;
  background: #fffbe6;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

.confirm-btn {
  background: #1890ff;
  color: white;
}

.complete-btn {
  background: #52c41a;
  color: white;
}
