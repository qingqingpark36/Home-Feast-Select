/* pages/menu/menu.wxss */
.menu-container {
  padding-bottom: 120rpx;
}

/* 分类导航 */
.category-nav {
  position: sticky;
  top: 0;
  z-index: 100;
  background: white;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.category-item.active {
  background: #07c160;
  color: white;
  font-weight: bold;
}

/* 菜品列表 */
.dish-list {
  padding: 20rpx;
}

.dish-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.dish-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.dish-image-wrapper {
  width: 100%;
  height: 280rpx;
  background: #f5f5f5;
}

.dish-image {
  width: 100%;
  height: 100%;
}

.dish-info {
  padding: 20rpx;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-category {
  font-size: 24rpx;
  color: #999;
}

.dish-action {
  padding: 0 20rpx 20rpx;
}

.add-btn {
  width: 100%;
  background: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx;
  border: none;
}

/* 购物车浮动按钮 */
.cart-float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 1000;
}

.cart-icon {
  font-size: 50rpx;
}

.cart-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #fa5151;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}
