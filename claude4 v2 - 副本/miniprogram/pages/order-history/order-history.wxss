/* pages/order-history/order-history.wxss */
.order-history-container {
  padding: 20rpx;
}

/* 空状态 */
.empty-icon {
  font-size: 150rpx;
  text-align: center;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.order-status.pending {
  background: #fff7e6;
  color: #faad14;
}

.order-status.confirmed {
  background: #e6f7ff;
  color: #1890ff;
}

.order-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

/* 订单菜品 */
.order-dishes {
  margin-bottom: 20rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
}

.dish-count {
  font-size: 26rpx;
  color: #999;
}

/* 订单备注 */
.order-notes {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
}

.notes-label {
  color: #666;
  margin-bottom: 5rpx;
}

.notes-text {
  color: #333;
}
